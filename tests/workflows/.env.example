DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# Webhook URLs (set only those you want to test).
# Example:
# WF01_PUSH_WEBHOOK_URL=http://localhost:5678/webhook/autoposting-01-ingest-push-test
WF01_PUSH_WEBHOOK_URL=
WF01_PULL_WEBHOOK_URL=
WF02_DISPATCHER_WEBHOOK_URL=
WF03_MONITOR_WEBHOOK_URL=
WF11_BOT_INGEST_WEBHOOK_URL=
WF12_BOT_ENGINE_WEBHOOK_URL=
WF13_BOT_MONITOR_WEBHOOK_URL=
WF_ADAPTER_TELEGRAM_WEBHOOK_URL=
WF_ADAPTER_MAX_WEBHOOK_URL=

# Adapter tests (optional).
# Required for telegram adapter success + cache-upsert test.
ADAPTER_TG_TARGET_ID=
# Optional overrides for adapter media URLs.
ADAPTER_TG_PHOTO_URL=https://httpbin.org/image/png
ADAPTER_TG_VIDEO_URL=

# Optional global auth header for all webhook calls.
N8N_WEBHOOK_AUTH_HEADER=
N8N_WEBHOOK_AUTH_VALUE=

# Header names used by workflows to read endpoint secrets.
INGEST_SECRET_HEADER=X-Autoposting-Secret
BOT_SECRET_HEADER=X-Autoposting-Secret

# Example:
# N8N_WEBHOOK_AUTH_HEADER=Authorization
# N8N_WEBHOOK_AUTH_VALUE=Bearer change_me

# Timeouts (seconds).
REQUEST_TIMEOUT_SEC=20
POLL_TIMEOUT_SEC=45
POLL_INTERVAL_SEC=1
